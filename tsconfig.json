{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*.js"]
    },
    "lib": ["ES2015", "DOM"]
  },
  "include": [
    "Client/**/*",
    "Common/**/*", 
  ],
  "exclude": [
    "Server/**/*"
  ]
}